<!DOCTYPE html>
<html>
  <head>
    <title>RailsRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <span><%=link_to 'Recipes', recipes_path%></span>
      <span><%=link_to 'New Recipe', new_recipe_path%></span>
      <span><%=link_to 'Ingredients', ingredients_path%></span>
      <span><%=link_to 'New Ingredient', new_ingredient_path%></span>
      <span><%=button_to "Logout", logout_path %></span>
    </div>
    <%= yield %>
  </body>
</html>
